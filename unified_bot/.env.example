# ============================================
# KiloLend Unified Bot Configuration
# ============================================

# Server
PORT=3000

# ============================================
# Chain Selection
# ============================================
# Available chains: kaia, kub, etherlink
# Set to "all" to enable all chains, or specify comma-separated list
ENABLED_CHAINS=kaia,kub,etherlink

# ============================================
# Module Selection
# ============================================
# Available modules: pointtracker, oracle, liquidator
# Set to all or specify comma-separated list
ENABLED_MODULES=pointtracker,oracle,liquidator

# ============================================
# API Configuration
# ============================================
# Base URL for backend API (for user fetching and price data)
API_BASE_URL=http://localhost:8000/api/v1
PRICE_API_URL=http://localhost:8000/api/v1/prices
API_KEY=

# ============================================
# Chain Configuration
# ============================================
# NOTE: Contract addresses are configured in unified_bot/config/chains.js
# Only RPC URLs and wallet keys need to be set here

# KAIA Chain
KAIA_RPC_URL=https://public-en.node.kaia.io
KAIA_PRIVATE_KEY=your_kaia_wallet_private_key_here

# KUB Chain
KUB_RPC_URL=https://rpc.bitkubchain.io
KUB_PRIVATE_KEY=your_kub_wallet_private_key_here

# Etherlink Chain
ETHERLINK_RPC_URL=https://node.mainnet.etherlink.com
ETHERLINK_PRIVATE_KEY=your_etherlink_wallet_private_key_here

# ============================================
# Contract Addresses (Optional Override)
# ============================================
# To override default addresses in chains.js, uncomment and set these:
# KAIA_CUSDT_ADDRESS=0x...
# KAIA_CSIX_ADDRESS=0x...
# KUB_CKUSDT_ADDRESS=0x...
# ETHERLINK_CUSDT_ADDRESS=0x...

# ============================================
# Point Tracker Configuration
# ============================================
# Poll interval for event scanning (seconds)
POLL_INTERVAL_SECONDS=60
# Block window to scan per poll
SCAN_WINDOW_SECONDS=60
# Maximum blocks to scan per request
MAX_BLOCKS_PER_SCAN=100

# ============================================
# Oracle Updater Configuration
# ============================================
# Update interval for price updates (minutes)
UPDATE_INTERVAL_MINUTES=120
# Maximum gas price in GWEI
MAX_GAS_PRICE_GWEI=50

# Token Exclusions (per-chain)
# Format: CHAIN_SYMBOL,CHAIN_SYMBOL (e.g., KAIA_USDT,KUB_KUSDT,ETHERLINK_USDT)
# Tokens listed here will NOT have their prices updated by the Oracle bot
# Example: Exclude stablecoins from Oracle updates
EXCLUDED_TOKENS=KAIA_USDT,KUB_KUSDT,ETHERLINK_USDT

# ============================================
# Liquidator Configuration
# ============================================
# Check interval for liquidation opportunities (seconds)
CHECK_INTERVAL_SECONDS=60
# Minimum profit in USD to execute liquidation
MIN_PROFIT_USD=10
# Maximum gas price in GWEI
MAX_GAS_PRICE_GWEI=50
# Maximum liquidation amount in USD
MAX_LIQUIDATION_USD=5000
# Minimum collateral value in USD
MIN_COLLATERAL_USD=100

# ============================================
# Logging
# ============================================
# Log level: debug, info, warn, error
LOG_LEVEL=info